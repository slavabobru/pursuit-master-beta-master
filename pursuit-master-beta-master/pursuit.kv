<GridGame>:

<PursuitGame>:
    FloatLayout:
        id: game_layout
        size: self.parent.width, self.parent.height
        canvas:
            Rectangle:
                source: 'res/bg.jpg'
                size: self.size

    FloatLayout:
        id: game_layout_box
        size: self.parent.width * 0.9, self.parent.height * 0.7
        canvas:
            Color:
                rgb: 1, 1, 1, 0
            Rectangle:
                size: self.size
                pos: 60, 230

    Button:
        id: Up
        text: 'Up'
        font_name: 'font/font.ttf'
        color: [0, 1, 1, 1]
        size: 100, 100
        pos: 450, 100
        on_press: root.write_number(self)
        Label:
            font_size: 70
            font_name: 'font/font.ttf'
            center_x: root.width / 20 *16
            color: [1,0,0,1]
            text: "Pursuit"

    Button:
        id: Down
        text: 'Down'
        font_name: 'font/font.ttf'
        color: [0, 1, 1, 1]
        size: 100, 100
        pos: 450, 0

    Button:
        id: Left
        text: 'Left'
        font_name: 'font/font.ttf'
        color: [0, 1, 1, 1]
        size: 100, 100
        pos: 350, 0

    Button:
        id: Right
        text: 'Right'
        font_name: 'font/font.ttf'
        color: [0, 1, 1, 1]
        size: 100, 100
        pos: 550, 0

    GridGame:
